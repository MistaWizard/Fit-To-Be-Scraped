<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Comic Book News Scraper</a>
    </div>
    <ul class="nav navbar-nav">
        <li class="active"><a href="/">Home</a></li>
        <li><a href="/saved">Saved Articles</a></li>
        <li>
            <form class="form-inline" action="/api/scrape" method="GET">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Scrape</button>
            </form>
        </li>
    </ul>
  </div>
</nav>
<div class="container">
    <div class="jumbotron">
        <h1 id="bigWords">Let's Scrape Yo!</h1>
    </div>
    <div class="col-md-12">
        {{#if data}}
            {{#each data}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                    <img src={{this.photo}} />
                </div>
                <div class="panel-body">
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <!-- Button -->
                    <form class="navbar-form navbar-right" method="POST" action="/api/articles/save/{{this.id}}">
                        <button type="submit" class="btn btn-default" id="articleButton">Save Article</button>
                    </form>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Sorry, it looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>