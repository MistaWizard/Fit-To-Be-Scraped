<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="navbar-header">
        <a class="navbar-brand" href="/">Comic Book News</a>
    </div>
    <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li>
                <a href="/" class="active"><button type="submit" class="btn btn-primary">Home</button></a>
            </li>
            <li>
                <a href="/saved"><button type="submit" class="btn btn-primary">Saved Articles</button></a>
            </li>
            <li>
                <form class="form-inline" action="/api/scrape" method="GET">
                    <button class="btn btn-success my-2 my-sm-0" type="submit">Scrape</button>
                </form>
            </li>
        </ul>
    </div>
</nav>

<div class="container-fluid">
    <div class="jumbotron">
        <h1 id="bigWords">Let's Scrape Yo!</h1>
    </div>
</div>

<div class="container">
    <div class="col-md-12">
        {{#if data}}
        {{#each data}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>{{this.title}}</h4>
                <img src={{this.photo}} class="articleImage" />
            </div>
            <div class="panel-body">
                <a href={{this.link}} target="_blank">{{this.title}}</a>
                <!-- Button -->
                <form class="navbar-form navbar-right" method="POST" action="/api/articles/save/{{this.id}}">
                    <button type="submit" class="btn btn-default" id="articleButton">Save Article</button>
                </form>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Sorry, it looks like we don't have any new articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>