<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Comic Book News Scraper</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
      <li class="active"><a href="/saved">Saved Articles</a></li>
      <li><a href="/scrape" class="btn btn-danger scrape-new">SCRAPE!</a></li>
    </ul>
  </div>
</nav>
<div class="container">
    <div class="jumbotron">
        <h1 id="bigWords">Let's Scrape Yo!</h1>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="panel-body">
                        <p> {{this.summary}}</p>
                        <a href={{this.link}} target="_blank">{{this.link}}</a>
                        <br><br>
                        {{!-- <button type="button" class="btn btn-default addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button> --}}
                        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal{{this.id}}" id="addNote">Notes</button>
                        <form class="navbar-form navbar-right" method="POST" action="/api/articles/delete/{{this.id}}">                            
                            <button type="submit" class="btn btn-primary delete">Delete</button>
                        </form>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>



{{!-- <!-- Modal --> --}}
{{#each article}}
<div class="modal fade" id="myModal{{this.id}}" role="dialog">
    
  <div class="modal-dialog">
  {{!-- <!-- Modal content--> --}}
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Write a note</h4>
    </div>
    <div class="modal-body">
      {{#if notes}}
        <div class="row">
          <div class="panel panel-default">
            <div class="panel-body">
              {{notes.body}}
              <form class="navbar-form navbar-right" method="POST" action="/api/notes/delete/{{notes.id}}">
                <button type="submit" class="btn btn-default">Delete Note</button>
              </form>
            </div>
          </div>
        </div>
        {{/if}}
      {{!-- {{/each}} --}}
        <div class="row">
          <form class="navbar-form navbar-left" action="/api/notes/{{this.id}}" method="POST">
            <div class="form-group">
              <label for="apptNotes">Notes</label>
              <textarea class="form-control" rows="3" id="apptNotes" name="body" placeholder="Notes"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
          </form>
        </div>  
      </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
</div>
{{/each}}